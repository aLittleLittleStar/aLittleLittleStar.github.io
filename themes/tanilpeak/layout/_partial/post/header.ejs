<div class="post-header main-content-wrap <%= (post.metaAlignment ? 'text-' + post.metaAlignment : 'text-left') %>">
    <% if (post.link) { %>
        <h1>
            <a class="link" href="<%- url_for(post.link) %>" target="_blank" rel="noopener">
                <%= post.title || '(' + __('post.no_title') + ')' %>
            </a>
        </h1>
    <% } else { %>
        <h1 class="post-title">
            <%= post.title || '(' + __('post.no_title') + ')' %>
        </h1>
    <% } %>
    <% if (post.meta === undefined || post.meta) { %>
        <%- partial('meta',{classes: ['post-meta']}) %>
    <% } %>
    <i class="fas fa-chart-area"></i> 
    <span class="post-count">
        字数统计：<%=wordcount(post.content) %>字
    </span>
</div>
